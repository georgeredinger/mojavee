<h1>Editing linkcategory</h1>

<% form_for(@linkcategory) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @linkcategory %> |
<%= link_to 'Back', linkcategories_path %>
